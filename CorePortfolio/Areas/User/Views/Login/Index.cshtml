@model PortfolioCoreProject.Areas.User.Models.UserLoginViewModel

<!DOCTYPE html>
<html lang="en">

@await Html.PartialAsync("/Areas/User/Views/Login/HeadPartial.cshtml")

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                    <div class="card col-lg-4 mx-auto">
                        <div class="card-body px-5 py-5">
                            <h3 class="card-title text-left mb-3">@sharedResource["login"]</h3>
                            <form method="post">
                                <div class="form-group">
                                    <label>@sharedResource["username"]</label>
                                    <input type="text" asp-for="UserName" class="form-control p_input">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label>@sharedResource["password"]</label>
                                    <input type="password" asp-for="Password" class="form-control p_input">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group d-flex align-items-center justify-content-between">
                                    <div class="form-check">
                                        <label class="form-check-label">
                                            <input type="checkbox" class="form-check-input"> @sharedResource["rememberMe"]
                                        </label>
                                    </div>
                                    <a href="#" class="forgot-pass">@sharedResource["forgotPassword"]</a>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block enter-btn">@sharedResource["login"]</button>
                                </div>

                                <div class="d-flex">
                                    <button class="btn btn-facebook mr-2 col">
                                        <i class="mdi mdi-facebook"></i> Facebook
                                    </button>
                                    <button class="btn btn-google col">
                                        <i class="mdi mdi-google-plus"></i> Google plus
                                    </button>
                                </div>
                                <p class="sign-up">@sharedResource["dontHaveAccount"]<a href="/User/Register/Index/"> @sharedResource["register"]</a></p>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("/Views/Admin/ScriptPartial.cshtml")
    @await Component.InvokeAsync("Notyf")
</body>
</html>