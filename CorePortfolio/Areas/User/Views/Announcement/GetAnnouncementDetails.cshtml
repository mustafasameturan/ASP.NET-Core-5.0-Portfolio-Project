@model Entities.Concrete.Announcement

@{
    ViewData["Title"] = "GetAnnouncementDetails";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card bg-gradient-warning">
        <div class="card-body">
            <h4 class="card-title">@sharedResource["announcementDetail"]</h4>
            <form class="forms-sample">
                <div class="form-group">
                    @*<label>ID</label>*@
                    @Html.HiddenFor(x => x.AnnouncementID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">@sharedResource["name"]</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">@sharedResource["surname"]</label>
                    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">@sharedResource["date"]</label>
                    @Html.TextBoxFor(x => x.Date, "{0: dd-MMMM-yyyy}", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">@sharedResource["anno"]</label>
                    @Html.TextAreaFor(x => x.Content, 10, 4, new { @class = "form-control" })
                </div>
            </form>
        </div>
        <a href="/User/UserMessage/SendMessage/" class="btn btn-primary float-lg-right">@sharedResource["sendMessage"]</a>
        <a href="/User/Announcement/Index/" class="btn btn-info float-lg-right">@sharedResource["backToAnnouncement"]</a>
    </div>
</div>
