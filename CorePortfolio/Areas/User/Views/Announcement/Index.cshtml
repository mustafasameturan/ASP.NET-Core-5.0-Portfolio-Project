@using Entities.Concrete
@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


@{ string color = ""; }
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="text-center"> # </th>
                            <th class="text-center"> @sharedResource["announcementTitle"] </th>
                            <th class="text-center"> @sharedResource["announcementType"] </th>
                            <th class="text-center"> @sharedResource["nameSurname"] </th>
                            <th class="text-center"> @sharedResource["date"] </th>
                            <th class="text-center"> @sharedResource["details"] </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Status == "Yeni Yazı")
                            {
                                color = "table-info";
                            }
                            if (item.Status == "Yeni Video")
                            {
                                color = "table-warning";
                            }
                            if (item.Status == "Konferans")
                            {
                                color = "table-danger";
                            }
                            if (item.Status == "Bootcamp")
                            {
                                color = "table-success";
                            }
                            if (item.Status == "Gezi Duyurusu")
                            {
                                color = "table-primary";
                            }

                            <tr class="@color">
                                <td class="text-center">@item.AnnouncementID</td>
                                <td class="text-center">@item.Title</td>
                                <td class="text-center">@item.Status</td>
                                <td class="text-center">@item.Name @item.Surname</td>
                                <td class="text-center">@(((DateTime)item.Date).ToString("dd-MMMMM-yyyy"))</td>
                                <td class="text-center"><a href="/User/Announcement/GetAnnouncementDetails/@item.AnnouncementID" class="btn btn-danger">@sharedResource["goToDetail"]</a></td>
                            </tr>

                        }
                    </tbody>
                </table>
                <br />
                <a href="/User/Announcement/AddAnnouncement" class="btn btn-outline-info float-lg-right">@sharedResource["makeAnAnnouncement"]</a>
            </div>
        </div>
    </div>
</div>
