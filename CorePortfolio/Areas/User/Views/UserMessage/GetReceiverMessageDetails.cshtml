@model Entities.Concrete.UserMessage

@{
    ViewData["Title"] = "GetReceiverMessageDetails";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card bg-inverse-dark">
        <div class="card-body">
            <h4 class="card-title text-warning"><i>@sharedResource["messageDetail"]</i></h4>
            <form class="forms-sample">
                <div class="form-group text-white">
                    @*<label>ID</label>*@
                    @Html.HiddenFor(x => x.UserMessageID, new { @class = "form-control" })
                </div>

                <div class="form-group text-white">
                    <label>@sharedResource["senderNameSurname"]</label>
                    @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
                </div>

                <div class="form-group text-white">
                    <label>@sharedResource["senderMail"]</label>
                    @Html.TextBoxFor(x => x.Sender, new { @class = "form-control" })
                </div>

                <div class="form-group text-white">
                    <label>@sharedResource["message"]</label>
                    @Html.TextAreaFor(x => x.MessageContent, 10, 4, new { @class = "form-control" })
                </div>
                <a href="/User/UserMessage/Inbox" class="btn btn-warning float-lg-right">@sharedResource["backToInbox"]</a>
            </form>
        </div>
    </div>
</div>

