@model Entities.Concrete.ContactInformation

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditContactInformation", "ContactInformation", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@sharedResource["editContactInformationPages"]</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        @*<label>Proje ID</label>*@
                        @Html.HiddenFor(x => x.ContactInformationID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>@sharedResource["title"]</label>
                        @Html.TextBoxFor(x => x.Header, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>@sharedResource["eMail"]</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>@sharedResource["discordID"]</label>
                        @Html.TextBoxFor(x => x.DiscordID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>@sharedResource["descriptionOne"]</label>
                        @Html.TextAreaFor(x => x.Description, 6, 3, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>@sharedResource["descriptionTwo"]</label>
                        @Html.TextAreaFor(x => x.Description2, 6, 3, new { @class = "form-control" })
                    </div>
                    <a href="/ContactInformation/Index/" class="btn btn-dark float-right">@sharedResource["cancel"]</a>
                    <button type="submit" class="btn btn-info mr-2 float-right" onclick="return confirmEdit()">@sharedResource["save"]</button>
                </form>
            </div>
        </div>
    </div>
}

<script language="javascript">function confirmEdit() { var agree = confirm("@sharedResource["editMessage"]"); if (agree) { return true; } else { return false; } }</script>
