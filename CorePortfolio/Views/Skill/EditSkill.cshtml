@model Entities.Concrete.Skill

@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@sharedResource["skillEditPage"]</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x => x.SkillID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>@sharedResource["skillName"]</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>@sharedResource["skillValue"]</label>
                        @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
                    </div>
                    <a href="/Skill/Index/" class="btn btn-dark float-right">@sharedResource["cancel"]</a>
                    <button type="submit" class="btn btn-info mr-2 float-right" onclick="return confirmEdit()">@sharedResource["save"]</button>
                </form>
            </div>
        </div>
    </div>
}

<script language="javascript">function confirmEdit() { var agree = confirm("@sharedResource["editMessage"]"); if (agree) { return true; } else { return false; } }</script>


