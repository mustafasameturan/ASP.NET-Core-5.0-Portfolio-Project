@model Entities.Concrete.Service

@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@sharedResource["serviceEditPage"]</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        @*<label>Servis ID</label>*@
                        @Html.HiddenFor(x => x.ServiceID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>@sharedResource["serviceName"]</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>@sharedResource["imageUrl"]</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    </div>
                    <a href="/Service/Index/" class="btn btn-dark float-right">@sharedResource["cancel"]</a>
                    <button type="submit" class="btn btn-info mr-2 float-right" onclick="return confirmEdit()">@sharedResource["save"]</button>
                </form>
            </div>
        </div>
    </div>

}

<script language="javascript">function confirmEdit() { var agree = confirm("@sharedResource["editMessage"]"); if (agree) { return true; } else { return false; } }</script>
