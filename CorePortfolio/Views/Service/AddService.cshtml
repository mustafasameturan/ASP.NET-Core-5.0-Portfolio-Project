@model Entities.Concrete.Service

@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddService", "Service", FormMethod.Post))
{
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@sharedResource["serviceAddPage"]</h4>
            <form class="forms-sample">
                <div class="form-group">
                    <label>@sharedResource["serviceName"]</label>
                    <input type="text" class="form-control" placeholder="@sharedResource["serviceName"]" name="Title">
                    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>@sharedResource["imageUrl"]</label>
                    <input type="text" class="form-control" placeholder="@sharedResource["imageUrl"]" name="ImageUrl">
                    @Html.ValidationMessageFor(x => x.ImageUrl, "", new { @class = "text-danger" })
                </div>
                <a href="/Service/Index/" class="btn btn-dark float-right">@sharedResource["backToServiceList"]</a>
                <button type="submit" class="btn btn-info mr-2 float-right">@sharedResource["save"]</button>
            </form>
        </div>
    </div>
</div>
}

