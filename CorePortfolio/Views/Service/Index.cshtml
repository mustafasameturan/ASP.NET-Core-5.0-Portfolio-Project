@using Entities.Concrete
@model List<Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@sharedResource[""]</h4>
            <div class="table-responsive">
                <table class="table table-dark text-center text-white">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> @sharedResource["serviceName"]</th>
                            <th> @sharedResource["imageUrl"]</th>
                            <th> @sharedResource["edit"]</th>
                            <th> @sharedResource["delete"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.ServiceID </td>
                                <td> @item.Title </td>
                                <td> @item.ImageUrl </td>
                                <td> <a href="/Service/EditService/@item.ServiceID" class="btn btn-outline-warning">@sharedResource["edit"]</a> </td>
                                <td> <a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger" onclick="return confirmDel()">@sharedResource["delete"]</a> </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
            <a href="/Service/AddService" class="btn btn-info btn-rounded btn-fw float-right">@sharedResource["addNewService"]</a>
        </div>
    </div>
</div>

<script language="javascript">function confirmDel() { var agree = confirm("@sharedResource["deleteMessage"]"); if (agree) { return true; } else { return false; } }</script>
