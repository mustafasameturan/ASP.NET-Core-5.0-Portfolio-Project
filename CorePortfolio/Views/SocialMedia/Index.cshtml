@using Entities.Concrete
@model List<SocialMedia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@sharedResource["socialMediaList"]</h4>
            <div class="table-responsive">
                <table class="table table-striped text-center text-white">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> @sharedResource["socialMediaPlatform"]</th>
                            <th> @sharedResource["socialMediaUrl"]</th>
                            <th> @sharedResource["ıconUrl"]</th>
                            <th> @sharedResource["edit"] </th>
                            <th> @sharedResource["delete"] </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.SocialMediaID </td>
                                <td class="py-1">
                                    <img src="@item.PlatformIconUrl" alt="@item.Name" />
                                </td>
                                <td> <a href="@item.Url">@item.Url</a> </td>
                                <td> @item.IconUrl </td>
                                <td> <a href="/SocialMedia/EditSocialMedia/@item.SocialMediaID" class="btn btn-outline-light">@sharedResource["edit"]</a> </td>
                                <td> <a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-outline-danger" onclick="return confirmDel()">@sharedResource["delete"]</a> </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/SocialMedia/AddSocialMedia" class="btn btn-info btn-rounded btn-fw float-right">@sharedResource["addNewSocialMedia"]</a>
            </div>
        </div>
    </div>
</div>

<script language="javascript">function confirmDel() { var agree = confirm("@sharedResource["deleteMessage"]"); if (agree) { return true; } else { return false; } }</script>


