@model Entities.Concrete.Portfolio
@{
    ViewData["Title"] = "EditPortfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditPortfolio", "Portfolio", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@sharedResource["projectEditPage"]</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        @*<label>Proje ID</label>*@
                        @Html.HiddenFor(x => x.PortfolioID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>@sharedResource["projectName"]</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>@sharedResource["usedTool"]</label>
                        @Html.TextBoxFor(x => x.Tool, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>@sharedResource["imageUrl"]</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>@sharedResource["bigImageUrl"]</label>
                        @Html.TextBoxFor(x => x.BigImageUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>@sharedResource["usedToolUrl"]</label>
                        @Html.TextBoxFor(x => x.ToolIconUrl, new { @class = "form-control" })
                    </div>
                    <a href="/Portfolio/Index/" class="btn btn-dark float-right">@sharedResource["cancel"]</a>
                    <button type="submit" class="btn btn-info mr-2 float-right" onclick="return confirmEdit()">@sharedResource["save"]</button>
                </form>
            </div>
        </div>
    </div>
}

<script language="javascript">function confirmEdit() { var agree = confirm("@sharedResource["editMessage"]"); if (agree) { return true; } else { return false; } }</script>
