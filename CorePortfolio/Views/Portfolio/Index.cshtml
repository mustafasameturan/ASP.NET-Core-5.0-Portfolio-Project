@using Entities.Concrete
@model List<Portfolio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@sharedResource["projectList"]</h4>
            <div class="table-responsive">
                <table class="table table-striped text-center text-white">
                    <thead> 
                        <tr>
                            <th> # </th>
                            <th> @sharedResource["usedTool"] </th>
                            <th> @sharedResource["projectName"] </th>
                            <th> @sharedResource["imageUrl"]  </th>
                            <th> @sharedResource["edit"] </th>
                            <th> @sharedResource["delete"] </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.PortfolioID </td>
                                <td class="py-1">
                                    <img src="@item.ToolIconUrl" alt="@item.Tool" />
                                </td>
                                <td> @item.Title </td>
                                <td> @item.ImageUrl </td>
                                <td> <a href="/Portfolio/EditPortfolio/@item.PortfolioID" class="btn btn-outline-light">@sharedResource["edit"]</a> </td>
                                <td> <a href="/Portfolio/DeletePortfolio/@item.PortfolioID" class="btn btn-outline-danger" onclick="return confirmDel()">@sharedResource["delete"]</a> </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Portfolio/AddPortfolio" class="btn btn-info btn-rounded btn-fw float-right">@sharedResource["addNewProject"]</a>
            </div>
        </div>  
    </div>
</div>

<script language="javascript">function confirmDel() { var agree = confirm("@sharedResource["deleteMessage"]"); if (agree) { return true; } else { return false; } }</script>
