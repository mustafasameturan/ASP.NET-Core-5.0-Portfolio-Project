@using Entities.Concrete
@model List<UserMessage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div>
            <div class="card-body">
                <h4 class="card-title">@sharedResource["messages"]</h4>
                <div class="table-responsive">
                    <table class="table table-striped text-center text-white">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>@sharedResource["subject"]</th>
                                <th>@sharedResource["sender"]</th>
                                <th>@sharedResource["receiver"]</th>
                                <th>@sharedResource["date"]</th>
                                <th>@sharedResource["seeMessage"]</th>
                                <th>@sharedResource["delete"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td> # </td>
                                <td> @item.Subject </td>
                                <td> @item.SenderName </td>
                                <td> @item.ReceiverName </td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMMMM-yyyy"))</td>
                                <td> <a href="/AdminMessageEdit/DetailMessage/@item.UserMessageID" class="btn btn-outline-success">@sharedResource["seeMessage"]</a> </td>
                                <td> <a href="/AdminMessageEdit/DeleteUserMessage/@item.UserMessageID" class="btn btn-outline-danger" onclick="return confirmDel()">@sharedResource["delete"]</a> </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script language="javascript">function confirmDel() { var agree = confirm("@sharedResource["deleteMessage"]"); if (agree) { return true; } else { return false; } }</script>



