@model Entities.Concrete.UserMessage

@{
    ViewData["Title"] = "AdminMessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@sharedResource["messageDetail"]</h4>
            <form class="forms-sample">
                <div class="form-group">
                    @*<label>ID</label>*@
                    @Html.HiddenFor(x => x.UserMessageID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>@sharedResource["title"]</label>
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>@sharedResource["sender"]</label>
                    @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>@sharedResource["receiver"]</label>
                    @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>@sharedResource["date"]</label>
                    @Html.TextBoxFor(x => x.Date, "{0: dd-MMMM-yyyy}", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>@sharedResource["content"]</label>
                    @Html.TextAreaFor(x => x.MessageContent, 6, 3, new { @class = "form-control" })
                </div>
                <a asp-action="AdminOutbox" type="submit" class="btn btn-warning mr-2 float-lg-right">@sharedResource["adminOutbox"]</a>
                <a asp-action="AdminInbox" type="submit" class="btn btn-primary mr-2 float-lg-right">@sharedResource["adminInbox"]</a>
            </form>
        </div>
    </div>
</div>

