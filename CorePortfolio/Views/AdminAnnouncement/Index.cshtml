@using Entities.Concrete
@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div>
            <div class="card-body">
                <h4 class="card-title">@sharedResource["announcements"]</h4>
                <div class="table-responsive">
                    <table class="table table-striped text-center text-white">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th>@sharedResource["announcementTitle"]</th>
                                <th>@sharedResource["announcementType"]</th>
                                <th>@sharedResource["date"]</th>
                                <th>@sharedResource["nameSurname"]</th>
                                <th>@sharedResource["announcementDetail"]</th>
                                <th>@sharedResource["delete"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.AnnouncementID </td>
                                    <td> @item.Title </td>
                                    <td>@item.Status</td>
                                    <td>@(((DateTime)item.Date).ToString("dd-MMMMM-yyyy"))</td>
                                    <td>@item.Name @item.Surname</td>
                                    <td> <a href="/AdminAnnouncement/AnnouncementDetails/@item.AnnouncementID" class="btn btn-outline-success">@sharedResource["announcementDetail"]</a> </td>
                                    <td> <a href="/AdminAnnouncement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-outline-danger" onclick="return confirmDel()">@sharedResource["delete"]</a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script language="javascript">function confirmDel() { var agree = confirm("@sharedResource["deleteMessage"]"); if (agree) { return true; } else { return false; } }</script>


